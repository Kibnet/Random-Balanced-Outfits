<Window x:Class="Randomizer.NewNaryad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="Наряд" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel MinWidth="200">
            <Label Height="24">Название наряда</Label>
            <TextBox Height="24" Name="name" ToolTip="Название Наряда" />
            <Label Height="24">Длительность наряда</Label>
            <syncfusion:IntegerTextBox Height="24" Name="hours" ToolTip="Длительность Наряда" MinValue="0"
                                       NullValue="0" />
            <CheckBox Name="seal" Content="Только в Усиление" Margin="0,10,0,0" />
            <Button Content="Сохранить" Height="24" Margin="0,10,0,0" Click="Сохранить" />
        </StackPanel>
    </Grid>
</Window>